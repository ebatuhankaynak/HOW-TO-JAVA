<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10" styleClass="root" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mocha.client.controllers.LoginController">
   <children>
      <!-- <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>-->
   
       <Text id="welcome-text" text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1" />
   
       <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
   
       <TextField fx:id="usernameTF" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
       <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
   
       <PasswordField fx:id="passwordTF" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   
       <HBox alignment="BOTTOM_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
      <children>
              <Button onMouseClicked="#onSignInButtonClick" text="Sign In" />
      </children>
       </HBox>
   
       <Text fx:id="actiontarget" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <Hyperlink fx:id="createAccount" onMouseClicked="#onCreateAccountClick" text="Create One!" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <Label text="No Account?" GridPane.rowIndex="7" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="2">
         <children>
            <Label fx:id="errorLabel">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>


</GridPane>
